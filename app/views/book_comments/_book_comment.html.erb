 <tbody>
 <table>
    <% book.book_comments.each do |book_comment| %>
    <tr>
        <td><%= image_tag book_comment.user.get_profile_image(100,100) %>
        <%= book_comment.user.name %>
        </td>
        <td> <%= book_comment.comment %></td>
        <td>
        <% if book_comment.user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
        <% end %>
        </td>
    </tr>
    <% end %>
</table>
</tbody>
<!--コメント記入欄-->
<div>
    <%= form_with model: [ book, book_comment], local: false do |f| %>
    <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに" , class: "w-100"%>
    <br>
    <%= f.submit "送信する" %>
    <% end %>
</div>